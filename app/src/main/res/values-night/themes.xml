<!-- res/values-night/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryVariant">@color/orange_700</item>
        <item name="colorOnPrimary">@color/neutral_dark</item>

        <item name="colorSecondary">@color/orange_900</item>
        <item name="colorOnSecondary">@color/neutral_dark</item>

        <!-- Use the correct Android background attribute -->
        <item name="android:colorBackground">@color/neutral_dark</item>

        <!-- Surface color (for cards, dialogs) -->
        <item name="colorSurface">@color/neutral_dark</item>

        <!-- Text color -->
        <item name="android:textColor">@color/orange_500</item>

        <item name="android:windowBackground">@color/neutral_dark</item>
    </style>

    <style name="CustomButtonStyle">
        <item name="android:minHeight">45dp</item>
        <item name="android:background">@drawable/custom_button_bg</item>
        <item name="android:backgroundTint">@color/orange_500</item> <!-- Orange color for dark mode -->
        <item name="android:textColor">@color/neutral_dark</item> <!-- Black text for contrast -->
        <item name="android:padding">16dp</item>
    </style>
</resources>
